{
    "name": "boolean_reservoir",
    "image": "boolean_reservoir:1.0",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "workspaceFolder": "/code",
    "mounts": [
        "source=${localWorkspaceFolder},target=/root/repo,type=bind,ro",
        "source=${localWorkspaceFolder}/code,target=/code,type=bind",
        "source=${localWorkspaceFolder}/data,target=/data,type=bind",
        "source=${localWorkspaceFolder}/out,target=/out,type=bind"
    ],
    "postCreateCommand": "sudo chown -R vscode:vscode /code /data /out",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/boolean_reservoir/bin/python"
            },
            "extensions": [
                "ms-python.python",
            ]
        }
    },
    "hostRequirements": {
        "gpu": "optional"
    }
}
